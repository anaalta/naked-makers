<%= render "partials/header" %>
<div class="container">
  <div class="jumbotron text-center">
    <h1>Submit your data here</h1>
    <% if flash[:notice] %>
      <div class = 'alert alert-danger'><%= flash[:notice]%></div>
    <%end%>
    <%= form_for :response, url: {action: "create"} do |f| %>
    <div>
      <div>
        <h3>Where are you?</h3>
        <%= f.label "City:" %><br/>
        <%= f.text_field :city, class: "form-control" %>
      </div><br/>
      <h3>What languages do you use?</h3>
      <%= f.label "Languages:" %><br/>
      <% @languages.each do |language| %>
      <%= language.name %>
      <%= check_box_tag 'response[languages][]', language.id, false, id: language.id %><br/>
      <% end %>
      <h3>What is your salary range?</h3>
      <%= f.label "Salaries:" %><br/>
      <% @salaries.each do |salary| %>
      <%= salary.name %>
      <%= check_box_tag 'response[salaries][]', salary.id, false, id: salary.id %><br/>
      <% end %>
      <h3>Your age:</h3>
      <%= f.label "Age:" %><br/>
      <%= f.text_field :age, class: "form-control" %>
    </div>
    <br/>
    <%= f.submit "Submit Response", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
